Navigator:  # eliminate "<>" to make this a root widget
    HomePage:
        name: 'Home'  # name is required
    AppNotification:
        name: 'Notif'  # name is required

    # ------------------------------------ GPS -----------------------------------------
<HomePage>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '2dp'

        MDLabel:
            text: app.gps_location
            halign: 'center'
            font_style: 'H5'
            color: 0,0,0,1

        MDLabel:
            text: app.gps_status
            halign: 'center'
            color: 1,0,0,1


    MDAnchorLayout:

        # position of Anchor Layout
        anchor_x: 'right'
        anchor_y: 'top'
        padding: '10dp'

        MDRectangleFlatIconButton:
            text: "Notify   "

            #md_bg_color: 250/255, 177/255, 109/255, 1
            #line_color: 250/255, 177/255, 109/255, 1
            #text_color: 1,1,1,1

            on_release:
                app.root.current = "Notif"
                root.manager.transition.direction = "left"

    # ------------------------------------ Notification -----------------------------------------
<AppNotification>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '2dp'
        padding: '6dp'
        #md_bg_color: 'pink'

        MDRoundFlatButton:
            text: 'Notify Me'
            font_style: 'H5'
            on_release: app.do_notify()
            md_bg_color: 'white'
            valign: 'center'

    MDAnchorLayout:

        # position of Anchor Layout
        anchor_x: 'left'
        anchor_y: 'top'
        padding: '10dp'

        MDRectangleFlatIconButton:
            text: "GPS   "

            on_release:
                app.root.current = "Home"
                root.manager.transition.direction = "right"
